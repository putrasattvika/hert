{
  "name": "hert",
  "version": "0.0.1",
  "description": "Alerting system",
  "main": "dist",
  "scripts": {
    "eslint": "git diff --name-only origin/master..HEAD | grep -E '.js?$' | xargs ./node_modules/.bin/eslint --max-warnings 0",
    "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "eslint src"
  },
  "env": {
    "node": true
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "author": "kandito",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.4.1",
    "dotenv": "^2.0.0",
    "elasticsearch": "^11.0.1",
    "install": "^0.8.1",
    "lodash": "^4.15.0",
    "moment": "^2.14.1",
    "node-schedule": "^1.1.1",
    "npm": "^3.10.6",
    "slack-node": "^0.2.0",
    "winston": "^2.2.0",
    "yamljs": "^0.2.8"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.3.1",
    "nodemon": "^1.9.2"
  }
}
